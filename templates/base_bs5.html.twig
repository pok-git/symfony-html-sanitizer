<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}hello forms{% endblock %}</title>

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>

    {% set link_state_home = "" %}
    {% set link_state_model = "" %}
    {% set link_state_model_m = "" %}
    {% set route = app.request.attributes.get('_route') %}

    {% if route == 'home' %}
        {% set link_state_home = "active" %}
    {% elseif  route == 'form_model' %}
        {% set link_state_model = "active" %}
    {% elseif  route == 'form_model_m' %}
        {% set link_state_model_m = "active" %}
    {% endif %}

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">Forms</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link {{ link_state_home }} " aria-current="page" href="{{ path('home') }}">Home</a>
                    <a class="nav-link {{ link_state_model }} " aria-current="page" href="{{ path('form_model') }}">Form Model</a>
                    <a class="nav-link {{ link_state_model_m }} " aria-current="page" href="{{ path('form_model_m') }}">Form Model Manual</a>
                </div>
            </div>
        </div>
    </nav>

        {% block body %}{% endblock %}
    </body>
</html>
